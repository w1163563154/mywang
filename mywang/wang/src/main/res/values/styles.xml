<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="RadioButton_Tab_Style" >
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">match_parent</item>
      <item name="android:padding">3dp</item>
      <item name="android:drawablePadding">3dp</item>
      <item name="android:button">@null</item>
      <item name="android:gravity">center</item>
      <item name="android:background">@android:color/transparent</item>     
      <item name="android:layout_weight">1</item>
      <item name="android:textColor">@color/selector_rb_shop_text_bg</item>    
    </style>
    
    <style name="Shop_Tab_Style" >     
      <item name="android:layout_weight" >1</item>
      <item name="android:gravity" >center</item>
      <item name="android:layout_width">0dp</item>
      <item name="android:layout_height">50dp</item>
      <item name="android:button">@null</item>      
      <item name="android:textSize">16dp</item>
      <item name="android:background">@android:color/transparent</item>     
      <item name="android:textColor">@color/selector_rb_shop_text_bg</item>      
    </style>

    <style name="MyPopupWindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_showpopu</item>
        <item name="android:windowExitAnimation">@anim/anim_closepopu</item>
    </style>


    <style name="RadioButton_shop_list_item_Style" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">3dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="quick_option_dialog" >

        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>

    </style>

    <style name="dialog_animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>




</resources>
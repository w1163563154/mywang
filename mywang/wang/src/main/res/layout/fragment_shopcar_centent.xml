<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="117dp">


    <RelativeLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox

            android:id="@+id/cb_shopcar"
            android:button="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/selector_shopcar_check_bg"
            />

        <android.support.v7.widget.CardView

            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/cb_shopcar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#FFFFFF"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_shopcar"
                    android:layout_width="90dp"
                    android:layout_height="87dp"
                    android:background="@drawable/shop_detail_page_icon_service"
                    />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_shopcar_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="米其林(Michelin)轮胎205/55 16 91V 韧越 ENERY RERG..."
                    android:textColor="#ff333333"
                    android:maxLines="2"
                    android:textSize="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_shopcar"
                    android:layout_toEndOf="@+id/iv_shopcar"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_shopcar_price"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="62dp"
                    android:layout_height="22dp"
                    android:text="￥349.00"
                    android:textColor="#fffb1111"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/iv_shopcar"
                    android:layout_alignBottom="@+id/iv_shopcar"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:textColor="#ff999999"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/tv_shopcar_price"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
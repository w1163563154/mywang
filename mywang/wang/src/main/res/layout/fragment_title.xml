<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusableInTouchMode="true"
              android:focusable="true"
              android:background="#F2F2F2"
              android:orientation="vertical"
    >

    <include layout="@layout/title_back"/>

    <com.wang.xiaoyu.View.MyScrollView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:elevation="5dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <LinearLayout
                android:paddingBottom="5dp"
                android:id="@+id/ll_title_confirm_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/oder_confirm_phone"
                    />
                <TextView

                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_title_confirmorder_name"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未填写"
                    android:textColor="#ff999999"
                    android:textSize="17dp"
                    />

            </LinearLayout>

         <LinearLayout
             android:gravity="center"
             android:layout_below="@+id/ll_title_confirm_one"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/oder_confirm_phone"
                 />
             <TextView
                 android:layout_marginLeft="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="18582457831"
                 android:textColor="#ff333333"
                 android:textSize="17dp"
                 />
         </LinearLayout>


            <ImageView
                android:id="@+id/iv_title_confirm_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/oder_confirm_more"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp"


        >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shop"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="配送门店"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/shop_detail_page_icon_beauty"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="重庆市大渡口区新山村街道钢花路302附1-1 110号路302附1-1 110号"
                        android:textColor="#ff333333"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0分"
                        android:textColor="#FB1111"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="重庆市大渡口区新山村街道钢花路302附1"
                        android:textSize="11dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/order_confirm_goods"

                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商品信息"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffe3e3e3"
                />
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/shop_detail_page_icon_beauty"
                    />

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空气清洗剂"
                        android:textColor="#ff333333"
                        android:textSize="15dp"
                        />

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.0分"
                            android:textColor="#FB1111"
                            android:textSize="11dp"
                            />
                        <TextView
                            android:id="@+id/tv_confirmorder_shopinfo_shop_amount"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textColor="#ff999999"
                            android:textSize="12dp"
                            />
                    </RelativeLayout>
                    


                    <RelativeLayout
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <TextView

                            android:layout_centerVertical="true"
                            android:id="@+id/tv_confirmorder_shopinfomation_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="9.00元"
                            android:textSize="11dp"
                            android:textColor="#FB1111"
                            />
                        <TextView

                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_confirmorder_shopinfomation_price"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务费"
                            android:textColor="#ff3c1fed"
                            android:textSize="11dp"
                            android:background="@drawable/shape_text_service_charge_bule"
                            />

                        <TextView
                            android:id="@+id/tv_confirmorder_shopinfo_severic_amount"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:textColor="#ff999999"
                            android:textSize="12dp"
                            />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>

            <EditText
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_confrom_et_bg_"
                android:hint="商家留言"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            android:elevation="5dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="10dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shop_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="14dp"
                    android:text="商品总价"
                    />
                <TextView
                    android:id="@+id/tv_shop_total_price"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shop_servicecharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="14dp"
                    android:text="服务费"
                    />
                <TextView
                    android:id="@+id/tv_shop_servicecharge_price"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38.00"
                    android:textColor="#FB1111"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shop_discountcoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="14dp"
                    android:text="优惠券"
                    />
                <TextView
                    android:id="@+id/tv_shop_discountcoupon_price"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38.00"
                    android:textColor="#FB1111"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="14dp"
                    android:text="总计"
                    />
                <TextView
                    android:id="@+id/tv_total_price"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38.00"
                    android:textColor="#333333"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />

            </RelativeLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </com.wang.xiaoyu.View.MyScrollView>
    
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥349.00"
            android:textColor="#ff000000"
            android:textSize="18dp"
            />

        <Button
            android:id="@+id/bt_confirmorder_submit"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D42112"
            android:text="提交订单"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            />
    </RelativeLayout>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#F2F2F2"
    >

    <include layout="@layout/title_back"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/confirm_text_bg"

        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />

        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥1988.00"
            android:textColor="#ffe0072b"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择付款方式"
        android:textColor="#ff888888"
        android:textSize="14sp"
        android:background="#fff"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>


    <RadioGroup
        android:id="@+id/rg_payment_fragment"
        android:padding="15dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">



        <RadioButton
            android:drawableBottom="@drawable/ripple_button"
            android:id="@+id/rb_zfb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_raidobutton"
            android:button="@null"
            android:text="微信支付"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/wx"
            android:drawableRight="@android:drawable/btn_radio"
            />


        <RadioButton

            android:id="@+id/rb_wx"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_raidobutton"
            android:button="@null"
            android:text="微信支付"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/wx"
            android:drawableRight="@android:drawable/btn_radio"
            />
    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>


    <Button
        android:stateListAnimator="@drawable/selector_z_anim"
        android:id="@+id/bt_payment_confrim"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:text="确认"
        android:textColor="#ffffffff"
        android:textSize="16sp"

        />

</LinearLayout>